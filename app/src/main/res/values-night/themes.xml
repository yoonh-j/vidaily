<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vidaily" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_200</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background and Surface color. -->
        <item name="colorSurface">@color/dark_gray</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar and icons color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.Vidaily.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>
</resources>