<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vidaily" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_200</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background and Surface color. -->
        <item name="colorSurface">@color/dark_gray</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar and icons color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.Vidaily.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>

    <style name="Theme.Vidaily.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/edittext_padding</item>
    </style>

    <style name="Theme.Vidaily.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Vidaily.HomeLabel" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/base_layout_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Vidaily.HomeMoreBtn" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:drawableTint">@color/gray_500</item>
        <item name="android:paddingStart">@dimen/base_layout_margin</item>
        <item name="android:paddingTop">@dimen/base_layout_margin</item>
        <item name="android:paddingBottom">@dimen/base_layout_margin</item>
    </style>

    <style name="Theme.Vidaily.VideoMetadata" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>
</resources>